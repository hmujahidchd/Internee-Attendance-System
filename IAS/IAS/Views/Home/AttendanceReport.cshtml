@model IAS.ViewModel.AttendanceReportModel
@{
    ViewBag.Title = "AttendanceReport";
}

<h2>Attendance Report</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="row">
                <div class="pageTitle" style="display:block;text-align:center; color:black;">Profile</div>
                <div style="font-size:16px;width:100%; text-align:left; padding:10px;">
                    <div class="row" style="margin:10px;"><div class="col-sm">Name</div><div class="col-sm">@Model.User.username</div></div>
                    <div class="row" style="margin:10px;"><div class="col-sm">CNIC</div><div class="col-sm">@Model.User.cnic</div></div>
                    <div class="row" style="margin:10px;"><div class="col-sm">Supervisor</div><div class="col-sm">@Model.Supervisor.username</div></div>
                </div>
            </div>
            <div class="row">
                <div id="piechart"></div>
            </div>
            <div class="row">
                <button class="row btn btn-block btn-primary p-1">Print Preview</button>
                <button class="row btn btn-block btn-primary p-1">Download PDF</button>
            </div>
        </div>
        <div class="col-sm">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Date</th>
                    <th>Day</th>
                    <th>Report</th>
                    <th>Leave</th>
                    <th>Status</th>
                    <th>Remarks</th>
                </tr>
                @foreach (var item in Model.Month.AttendanceSheet)
                {
                    if (item.reportDatetime.DayOfWeek == DayOfWeek.Sunday)
                    {
                        <tr>
                            <td>@item.reportDatetime.ToString("dd-MM-yyyy")</td>
                            <td>@item.reportDatetime.ToString("dddd")</td>
                            <td colspan="4" style="background:rgb(128, 128, 128, 0.7);"></td>
                        </tr>
                    }
                    else if (item.statusid == (int)IAS.Helper_Class.Cls_Attendance.AttendanceStatus.Absent)
                    {
                        <tr class="highlight-red">
                            <td>@item.reportDatetime.ToString("dd-MM-yyyy")</td>
                            <td>@item.reportDatetime.ToString("dddd")</td>
                            <td colspan="4">@(IAS.Helper_Class.Cls_Attendance.StatusString(item.statusid))</td>
                        </tr>
                    }
                    else if (item.statusid == (int)IAS.Helper_Class.Cls_Attendance.AttendanceStatus.Leave)
                    {
                        <tr class="highlight-red">
                            <td>@item.reportDatetime.ToString("dd-MM-yyyy")</td>
                            <td>@item.reportDatetime.ToString("dddd")</td>
                            <td colspan="4">@(IAS.Helper_Class.Cls_Attendance.StatusString(item.statusid))</td>
                        </tr>
                    }
                    else if (item.statusid == (int)IAS.Helper_Class.Cls_Attendance.AttendanceStatus.Public_Holiday)
                    {
                        <tr>
                            <td>@item.reportDatetime.ToString("dd-MM-yyyy")</td>
                            <td>@item.reportDatetime.ToString("dddd")</td>
                            <td colspan="4" style="background:rgb(128 128 128);">@(IAS.Helper_Class.Cls_Attendance.StatusString(item.statusid))</td>
                        </tr>
                    }
                    else if (item.statusid == (int)IAS.Helper_Class.Cls_Attendance.AttendanceStatus.Present)
                    {
                        <tr>
                            <td>@item.reportDatetime.ToString("dd-MM-yyyy")</td>
                            <td>@item.reportDatetime.ToString("dddd")</td>
                            <td>@item.reportDatetime.ToString("hh:mm tt")</td>
                            <td>@item.leaveDatetime.ToString("hh:mm tt")</td>
                            <td>@(IAS.Helper_Class.Cls_Attendance.StatusString(item.statusid))</td>
                            <td>KPITB</td>
                        </tr>
                    }
                }
            </table>

        </div>
    </div>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        // Load google charts
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        // Draw the chart and set the chart values
        function drawChart() {
            var data = google.visualization.arrayToDataTable([
                ['Attendence', 'Days'],
                ['Present', @(Model.Month.Present)],
                ['absent', @(Model.Month.Absent)],
                ['Leave', @(Model.Month.Leaves)]
            ]);

            // Optional; add a title and set the width and height of the chart
            var options = { 'title':@((new DateTime(Model.Month.Year, Model.Month.Month,1)).ToString("dddd, yyyy")), 'width': 500, 'height': 320 };

            // Display the chart inside the <div> element with id="piechart"
            var chart = new google.visualization.PieChart(document.getElementById('piechart'));
            chart.draw(data, options);
        }
    });
</script>